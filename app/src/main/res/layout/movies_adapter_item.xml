<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/cv_item_recycler_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:layout_marginEnd="2dp"
    android:layout_marginStart="2dp"
    android:layout_marginTop="2dp"
    android:foreground="?attr/selectableItemBackground"
    card_view:cardCornerRadius="@dimen/card_recycler_corner_radius"
    card_view:cardElevation="@dimen/card_recycler_elevation">
<RelativeLayout
    android:id="@+id/rl_rela_round"
    android:layout_width="match_parent"
    android:layout_height="96dp"
    android:padding="6dp">
    <ImageView
        android:src="@drawable/ic_launcher_background"
        android:id="@+id/iv_recycler_item"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@id/tv_recycler_item_name"/>
    <TextView
        android:text="IME FILMA"
        android:gravity="center"
        android:id="@+id/tv_recycler_item_name"
        android:layout_width="192dp"
        android:layout_height="48dp"
        android:layout_toRightOf="@id/iv_recycler_item"
        />

    <TextView
        android:id="@+id/tv_recycler_item_genre"
        android:layout_width="192dp"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/iv_recycler_item"
        android:gravity="center"
        android:text="Ime zanra" />
</RelativeLayout>


</android.support.v7.widget.CardView>